<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane id="AnchorPane" prefHeight="525.0" prefWidth="707.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.CustomerController">
   <children>
      <Label layoutX="14.0" layoutY="75.0" text="Name" />
      <Label layoutX="14.0" layoutY="122.0" text="Address" />
      <Label layoutX="8.0" layoutY="338.0" text="Phone Number" />
      <TableView fx:id="tableView" layoutX="342.0" layoutY="14.0" prefHeight="492.0" prefWidth="352.0">
        <columns>
          <TableColumn fx:id="nameTableRow" prefWidth="154.0" text="Name" />
          <TableColumn fx:id="idTableRow" prefWidth="85.0" text="ID" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <ButtonBar layoutX="21.0" layoutY="434.0" prefHeight="39.0" prefWidth="292.0">
        <buttons>
          <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAdd" text="Add" />
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" text="Save" />
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDelete" text="Delete" />
        </buttons>
      </ButtonBar>
      <TextField fx:id="nameTextField" layoutX="100.0" layoutY="70.0" />
      <TextField fx:id="lineOneTextField" layoutX="100.0" layoutY="117.0" promptText="Line 1" />
      <TextField fx:id="lineTwoTextField" layoutX="100.0" layoutY="156.0" text="Line 2" />
      <TextField fx:id="phoneTextField" layoutX="110.0" layoutY="333.0" />
      <TextField fx:id="zipTextField" layoutX="207.0" layoutY="240.0" prefHeight="27.0" prefWidth="60.0" promptText="zip" />
      <ComboBox fx:id="stateComboBox" layoutX="100.0" layoutY="240.0" prefHeight="27.0" prefWidth="92.0" promptText="state" />
      <TextField fx:id="cityTextField" layoutX="100.0" layoutY="200.0" text="City" />
   </children>
</AnchorPane>
